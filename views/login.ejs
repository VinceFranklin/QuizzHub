  <body class="login-page">
    <div class="container">
      <h1 class="login-head">Login</h1>
    
      <div class="row">
        <div class="col-sm-8">
          <div class="card">
            <div class="card">
    
              <!-- Makes POST request to /login route -->
              <form action="/login" method="POST">
                <div class="form-group">
                  <label class="login-name login" for="name">Name</label>
                  <input type="text" class="form-control" required="Mandatory" name="name">
                </div>
                <div class="form-group">
                  <label class=" login-email login"for="email">Email</label>
                  <input type="email" class="form-control"required="Mandatory" name="username">
                </div>
                <div class="form-group">
                  <label class="login-password login" for="password">Password</label>
                  <input type="password" class="form-control"required="Mandatory" name="password">
                </div>
                <button type="submit" class="btn btn2">Login</button>
              </form>
              <div>
               <p class="p"> Dont have an Account?<a href="/register">create</a></p>
              </div>
    
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <script src="" async defer></script>
  </body>
</html>
